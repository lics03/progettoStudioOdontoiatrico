<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      La form contiene <%= pluralize(@user.errors.count, "errore") %>.
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>