<li>
  <%= image_tag("img_" + user.sesso, {:style => "width:50px; border-radius: 50%;"}) %>
  <%= link_to user.nome + " " + user.cognome, user %>


  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "Cancella", user, method: :delete,
        data: { confirm: "Sei sicuro di voler cancellare " + user.nome + " " + user.cognome + "?" } %>
  <% end %>
</li>